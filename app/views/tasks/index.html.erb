<ul>
  <% @tasks.each do |task| %>
    <li>
      <strong>Title:</strong> <%= task.title %><br>
      <%= form_with url: toggle_completed_task_path(task), method: :patch, local: true do |form| %>
        <%= form.check_box :completed, { checked: task.completed }, true, false %>
        <%= form.submit "Update Status" %>
      <% end %>
      <%= link_to "Edit", edit_task_path(task), class: "button" %>
    </li>
  <% end %>
</ul>


<div class=links>
<%= link_to "Create a new task!", "/tasks/new" %>
</div>
